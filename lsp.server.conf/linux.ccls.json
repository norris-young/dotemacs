{
  "name": "ccls",
  "languageId": "c++",
  "command": ["ccls"],
  "initializationOptions": {
    "cache": {
      "directory": "~/.cache/.ccls-cache"
    },
    "clang": {
      "extraArgs": ["--target=armv7a-linux-gnueabi"],
      "excludeArgs": ["--march=armv7a", "-mabi=lp64"]
    },
    "index": {
      "comments": 0
    },
    "completion": {
      "filterAndSort": false
    }
  }
}
